<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MixUp.Pages.HostPage">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical">
        <Label Text="Host your private Lobby by pressing Create Lobby."
               Margin="20,20"
               HorizontalTextAlignment="Center"
               FontSize="28"
               VerticalOptions="Start" 
               HorizontalOptions="Start" />

        <BoxView HeightRequest="4" BackgroundColor="LightBlue" HorizontalOptions="FillAndExpand" VerticalOptions="Start"></BoxView>
        <StackLayout Orientation="Vertical" Margin="40,20" HorizontalOptions="FillAndExpand">
            <Entry Margin="15,0,15,0" WidthRequest="40" 
                   Placeholder="Enter a lobby name"
                   x:Name="lobbyNameEntry"
                   MaxLength="20"/>



            <Button WidthRequest="40"
                        HeightRequest="70"
                        Text="Create Lobby!"
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnCreateLobbyButtonClicked" />

        </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>